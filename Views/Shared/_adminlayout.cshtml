<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
       
        /* Custom styles */
        /* Make navbar transparent */
        .navbar {
            background-color: rgba(255, 255, 255, 0.1) !important; /* Slightly transparent white background */
        }

        .footer {
            background-color: rgba(255, 255, 255, 0.2); /* Slightly transparent white background */
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.7rem; /* Increased font size */
            color: #333;
        }

        .navbar-nav .nav-link {
            font-size: 1.2rem; /* Increased font size */
            color: #555; /* Adjust color as needed */
            transition: color 0.3s; /* Smooth transition on hover */
        }

            .navbar-nav .nav-link:hover {
                color: #007bff; /* Adjust color as needed */
                font-weight: bold; /* Make the link bold on hover */
            }

        .navbar-toggler {
            border-color: #007bff; /* Adjust color as needed */
        }

        /* Stylish hover effect for navbar brand */
        .navbar-brand:hover {
            color: #007bff; /* Adjust color as needed */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ManageBooks">Manage Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ManageCustomers">Manage Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ManageOrders">Manage Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="GenerateReports">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="ManageFeedback">Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminAuth">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
