@{
    var customerName = ViewData["CustomerName"] as string;
    var customerId = ViewData["CustomerId"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>


        /* Custom styles */

        /* Make navbar transparent */
        .navbar {
            background-color: rgba(255, 255, 255, 0.1) !important; /* Slightly transparent white background */
        }

        .footer {
            background-color: rgba(255, 255, 255, 0.2); /* Slightly transparent white background */
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.7rem; /* Increased font size */
            color:black
        }

        .navbar-nav .nav-link {
            font-size: 1.2rem; /* Increased font size */
            color: #555; /* Adjust color as needed */
            transition: color 0.3s; /* Smooth transition on hover */
        }

            .navbar-nav .nav-link:hover {
                color: #007bff; /* Adjust color as needed */
                font-weight: bold; /* Make the link bold on hover */
            }

        .navbar-toggler {
            border-color: #007bff; /* Adjust color as needed */
        }

        /* Stylish hover effect for navbar brand */
        .navbar-brand:hover {
            color: #007bff; /* Adjust color as needed */
        }

    </style>

    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="navbar-brand">BookStore</span>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <span class="nav-link text-dark">Welcome, @customerName!      (Customer ID: @customerId)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Feedback">Feedback</a>
                        </li>

                        
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Logout">Logout</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Password">Update Password</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
